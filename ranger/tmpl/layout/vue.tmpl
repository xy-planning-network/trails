{{ define "pageContent" }}
  <div id="vue-app" v-cloak></div>
{{ end }}

{{ define "vue" }}
  <script type="text/javascript">
    var InitialVuePage = "{{ .Data.entry }}"
    var InitialVueProps = {{ .Data.props }}
  </script>

  {{ if isDevelopment }}
  <script src="{{ asset (print "src/app.ts" ) }}" type="module"></script>
  {{ else }}
  <script src="{{ asset (print "assets/app.js" ) }}" type="module"></script>
  {{ end }}

  {{ template "vueScripts" . }}
{{ end }}
